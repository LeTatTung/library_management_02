<div class="row">
  <div class="col-sm-12">
    <% @comments.each do |comment| %>
      <div class="col-sm-4">
        <%= link_to comment.user.name, "#" %> :
      </div>
      <div class="col-sm-8">
        <%= comment.body %>
      </div>
      <hr>
    <% end %>
  </div>
  <hr>
  <div class="col-sm-12">
    <%= form_for [@book, @comment] do |f| %>
      <%= f.text_area :body, class: "form-control" %>
      <br>
      <%= f.submit class: "btn btn-primary center-block" %>
    <% end %>
  </div>
</div>
