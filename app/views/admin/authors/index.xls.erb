<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String"><%= t "admin.author.name" %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t "admin.author.body" %></Data></Cell>
        <Cell><Data ss:Type="DateTime"><%= t "admin.author.date_of_birth" %>
          </Data></Cell>
      </Row>
    <% @authors.each do |author| %>
      <Row>
        <Cell><Data ss:Type="String"><%= author.name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= author.body %></Data></Cell>
        <Cell><Data ss:Type="DateTime"><%= author.date_of_birth %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>
