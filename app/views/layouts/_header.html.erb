<header class="navbar navbar-default">
  <div class="container">
    <%= link_to t("site.name"), "#", id: "logo", class: "navbar-brand" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "navbar.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("navbar.profile"), current_user %></li>
              <li><%= link_to t("navbar.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("navbar.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("navbar.signup"), signup_path %></li>
          <li><%= link_to t("navbar.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
